<% if room.can_review? %>
    <%= form_for room.review_route, remote: true do |f| %>
        <% room.review_points.each do |points|%>
            <%= f.radio_button :points, points %>
            <%= f.label :points, value: points do%>
                <%= fa_icon 'star' %>
            <% end %>
        <% end %>
        %= f.submit %>
    <% end %>
<% else %>
    <span class="login_required">
      <%= t('.login_to_review') %>
    </span>
<% end %>